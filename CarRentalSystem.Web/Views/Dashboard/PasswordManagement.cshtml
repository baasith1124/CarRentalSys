@model CarRentalSystem.Web.ViewModels.Account.PasswordManagementViewModel

@{
    ViewData["Title"] = "Password Management";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="password-management-page">
    <div class="container py-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" class="text-decoration-none">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="Profile" class="text-decoration-none">Profile</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Password Management</li>
                    </ol>
                </nav>
                <h1 class="display-6 fw-bold text-primary mb-0">
                    <i class="bi bi-key"></i>
                    Password Management
                </h1>
                <p class="text-muted">Manage your account password and security settings</p>
            </div>
            <div>
                <a asp-action="Profile" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Profile
                </a>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Account Type Info Card -->
                <div class="card account-info-card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle text-primary"></i>
                            Account Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="info-label">Account Type</label>
                                    <div class="info-value">
                                        @if (Model.IsGoogleAccount)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-google me-1"></i>
                                                Google Account
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-envelope me-1"></i>
                                                Email Account
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="info-label">Password Status</label>
                                    <div class="info-value">
                                        @if (Model.HasPassword)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-shield-check me-1"></i>
                                                Password Set
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-shield-exclamation me-1"></i>
                                                No Password
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Password Management Card -->
                <div class="card password-card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-lock text-primary"></i>
                            @if (Model.IsGoogleAccount && !Model.HasPassword)
                            {
                                <text>Set Password</text>
                            }
                            else if (Model.HasPassword)
                            {
                                <text>Change Password</text>
                            }
                            else
                            {
                                <text>Password Management</text>
                            }
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.IsGoogleAccount && !Model.HasPassword)
                        {
                            <!-- Set Initial Password for Google Account -->
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Google Account Detected:</strong> You can set a password to enable email/password login in addition to Google login.
                            </div>

                            <form asp-action="SetPassword" method="post" id="setPasswordForm">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="NewPassword" class="form-label">New Password</label>
                                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter your new password" />
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                            <div class="form-text">Password must be at least 6 characters long.</div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your new password" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions mt-4">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-key"></i> Set Password
                                    </button>
                                    <a asp-action="Profile" class="btn btn-outline-secondary ms-2">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </a>
                                </div>
                            </form>
                        }
                        else if (Model.HasPassword)
                        {
                            <!-- Change Existing Password -->
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle me-2"></i>
                                <strong>Password Set:</strong> You can change your password below.
                            </div>

                            <form asp-action="ChangePassword" method="post" id="changePasswordForm">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                                            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Enter your current password" />
                                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="NewPassword" class="form-label">New Password</label>
                                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter your new password" />
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                            <div class="form-text">Password must be at least 6 characters long.</div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your new password" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions mt-4">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-key"></i> Change Password
                                    </button>
                                    <a asp-action="Profile" class="btn btn-outline-secondary ms-2">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </a>
                                </div>
                            </form>
                        }
                        else
                        {
                            <!-- No Password Set (Email Account) -->
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>No Password Set:</strong> Please contact support to set up your password.
                            </div>
                            <div class="text-center">
                                <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-primary">
                                    <i class="bi bi-headset"></i> Contact Support
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <!-- Security Tips Card -->
                <div class="card security-tips-card mt-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-shield-check text-primary"></i>
                            Security Tips
                        </h5>
                    </div>
                    <div class="card-body">
                        <ul class="security-tips-list">
                            <li>
                                <i class="bi bi-check-circle text-success me-2"></i>
                                Use a strong password with at least 8 characters
                            </li>
                            <li>
                                <i class="bi bi-check-circle text-success me-2"></i>
                                Include uppercase and lowercase letters, numbers, and symbols
                            </li>
                            <li>
                                <i class="bi bi-check-circle text-success me-2"></i>
                                Don't use personal information in your password
                            </li>
                            <li>
                                <i class="bi bi-check-circle text-success me-2"></i>
                                Change your password regularly
                            </li>
                            <li>
                                <i class="bi bi-check-circle text-success me-2"></i>
                                Never share your password with anyone
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .account-info-card, .password-card, .security-tips-card {
            background: var(--glass-bg-dark);
            backdrop-filter: var(--glass-backdrop-strong);
            border: 2px solid var(--glass-border);
            border-radius: var(--radius-xl);
            box-shadow: var(--glass-shadow);
            transition: var(--transition-smooth);
        }

        .account-info-card:hover, .password-card:hover, .security-tips-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--glass-shadow-colored);
            border-color: var(--glass-border-light);
        }

        .info-item {
            margin-bottom: 1rem;
        }

        .info-label {
            font-weight: 600;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
            display: block;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-value {
            font-size: 1.1rem;
            color: var(--text-primary);
            font-weight: 500;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }

        .form-control {
            background: var(--glass-bg);
            border: 2px solid var(--glass-border);
            border-radius: var(--radius-lg);
            color: var(--text-primary);
            padding: 0.75rem 1rem;
            transition: var(--transition-smooth);
        }

        .form-control:focus {
            background: var(--glass-bg-light);
            border-color: var(--glass-border-light);
            box-shadow: var(--shadow-glow);
            color: var(--text-primary);
        }

        .form-control::placeholder {
            color: var(--text-muted);
        }

        .form-text {
            color: var(--text-muted);
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .btn {
            border-radius: var(--radius-lg);
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            transition: var(--transition-smooth);
        }

        .btn-primary {
            background: var(--gradient-primary);
            border: 2px solid var(--glass-border-light);
            color: var(--text-primary);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-glow);
        }

        .btn-outline-primary, .btn-outline-secondary {
            border: 2px solid var(--glass-border);
            color: var(--text-primary);
            background: transparent;
        }

        .btn-outline-primary:hover, .btn-outline-secondary:hover {
            background: var(--glass-bg);
            border-color: var(--glass-border-light);
            transform: translateY(-2px);
        }

        .badge {
            font-size: 0.85rem;
            padding: 0.5rem 1rem;
            border-radius: var(--radius-lg);
        }

        .security-tips-list {
            list-style: none;
            padding: 0;
        }

        .security-tips-list li {
            padding: 0.5rem 0;
            color: var(--text-secondary);
            display: flex;
            align-items: center;
        }

        .breadcrumb {
            background: transparent;
            padding: 0;
        }

        .breadcrumb-item a {
            color: var(--text-secondary);
            text-decoration: none;
        }

        .breadcrumb-item a:hover {
            color: var(--text-primary);
        }

        .breadcrumb-item.active {
            color: var(--text-primary);
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const setPasswordForm = document.getElementById('setPasswordForm');
            const changePasswordForm = document.getElementById('changePasswordForm');

            // Form submission handlers
            if (setPasswordForm) {
                setPasswordForm.addEventListener('submit', function(e) {
                    const submitBtn = setPasswordForm.querySelector('button[type="submit"]');
                    const originalText = submitBtn.innerHTML;
                    submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Setting Password...';
                    submitBtn.disabled = true;
                });
            }

            if (changePasswordForm) {
                changePasswordForm.addEventListener('submit', function(e) {
                    const submitBtn = changePasswordForm.querySelector('button[type="submit"]');
                    const originalText = submitBtn.innerHTML;
                    submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Changing Password...';
                    submitBtn.disabled = true;
                });
            }
        });
    </script>
}
