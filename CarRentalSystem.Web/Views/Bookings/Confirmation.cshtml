@{
    ViewData["Title"] = "Booking Confirmation";
    var bookingId = ViewBag.BookingId as Guid?;
}

<div class="container py-5 text-center">
    <div class="card shadow-sm border-0 p-4">
        <h2 class="text-success mb-3">🎉 Booking Confirmed!</h2>

        @if (bookingId.HasValue)
        {
            <p class="fs-5 mb-2">Your booking ID is:</p>
            <p class="fw-bold text-primary fs-4">@bookingId</p>
        }

        <p class="text-muted mb-4">You can now proceed to payment or view your booking details.</p>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Payments" asp-action="PayNow" asp-route-bookingId="@bookingId" class="btn btn-success">
                Proceed to Payment
            </a>
            <a asp-controller="Bookings" asp-action="MyBookings" class="btn btn-outline-primary">
                View My Bookings
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-link">
                Return to Home
            </a>
        </div>
    </div>
</div>

