@model CarRentalSystem.Web.ViewModels.Car.CarDetailsViewModel

@{
    ViewData["Title"] = $"{Model.Name} {Model.Model} - Car Details";
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a href="#cars">Available Cars</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name @Model.Model</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Car Image -->
        <div class="col-lg-6">
            <div class="car-image-container">
                <img src="@(!string.IsNullOrEmpty(Model.ImagePath) ? $"/images/cars/{Model.ImagePath}" : "/images/default-car.jpg")" 
                     alt="@Model.Name @Model.Model" 
                     class="img-fluid rounded-4 shadow-sm" 
                     style="width: 100%; height: 400px; object-fit: cover;"
                     onerror="this.src='/images/default-car.jpg'" />
                
                <!-- Image overlay with availability -->
                <div class="position-absolute top-0 end-0 m-3">
                    <span class="badge bg-success fs-6 px-3 py-2">
                        <i class="bi bi-check-circle me-1"></i>
                        Available
                    </span>
                </div>
            </div>
        </div>

        <!-- Car Details -->
        <div class="col-lg-6">
            <div class="car-details">
                <!-- Header -->
                <div class="mb-4">
                    <h1 class="display-6 fw-bold text-primary mb-2">@Model.Name @Model.Model</h1>
                    <p class="text-muted mb-3">@Model.Year • @Model.Color • @Model.Transmission</p>
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <span class="badge bg-primary fs-6 px-3 py-2">@Model.RateText</span>
                        <span class="badge bg-info fs-6 px-3 py-2">
                            <i class="bi bi-people me-1"></i>
                            @Model.SeatingCapacity Seats
                        </span>
                    </div>
                </div>

                <!-- Description -->
                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Description</h5>
                    <p class="text-muted">@Model.Description</p>
                </div>

                <!-- Features -->
                @if (Model.Features.Any())
                {
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">Features</h5>
                        <div class="row g-2">
                            @foreach (var feature in Model.Features)
                            {
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        <span>@feature.Trim()</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Specifications -->
                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Specifications</h5>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="spec-item">
                                <i class="bi bi-calendar text-primary me-2"></i>
                                <strong>Year:</strong> @Model.Year
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="spec-item">
                                <i class="bi bi-palette text-primary me-2"></i>
                                <strong>Color:</strong> @Model.Color
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="spec-item">
                                <i class="bi bi-gear text-primary me-2"></i>
                                <strong>Transmission:</strong> @Model.Transmission
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="spec-item">
                                <i class="bi bi-fuel-pump text-primary me-2"></i>
                                <strong>Fuel Type:</strong> @Model.FuelType
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="spec-item">
                                <i class="bi bi-people text-primary me-2"></i>
                                <strong>Seating:</strong> @Model.SeatingCapacity People
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="spec-item">
                                <i class="bi bi-geo-alt text-primary me-2"></i>
                                <strong>Location:</strong> @Model.Location
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Availability -->
                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Availability</h5>
                    <div class="availability-info bg-light rounded-3 p-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-calendar-check text-success me-2"></i>
                            <span>@Model.AvailabilityText</span>
                        </div>
                    </div>
                </div>

                <!-- Owner Information -->
                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Owner Information</h5>
                    <div class="owner-info bg-light rounded-3 p-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-person-circle text-primary me-2"></i>
                            <strong>@Model.OwnerName</strong>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-envelope text-primary me-2"></i>
                            <span>@Model.OwnerEmail</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.OwnerPhone))
                        {
                            <div class="d-flex align-items-center">
                                <i class="bi bi-telephone text-primary me-2"></i>
                                <span>@Model.OwnerPhone</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-grid gap-2 d-md-flex">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Bookings" asp-action="Book" asp-route-carId="@Model.CarId" class="btn btn-primary btn-lg flex-fill">
                            <i class="bi bi-calendar-plus me-2"></i>
                            Book This Car
                        </a>
                    }
                    else
                    {
                        <button type="button" class="btn btn-primary btn-lg flex-fill" onclick="showLoginModal()">
                            <i class="bi bi-calendar-plus me-2"></i>
                            Login to Book
                        </button>
                    }
                    <a href="javascript:history.back()" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-arrow-left me-2"></i>
                        Back to Search
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Book Section -->
    <div id="booking" class="row mt-5">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-gradient-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-lightning-charge me-2"></i>
                        Quick Book This Car
                    </h4>
                    <p class="mb-0 mt-2 opacity-75">Use your search parameters or customize below</p>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info border-0 rounded-3 mb-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-info-circle me-2"></i>
                            <div>
                                <strong>Tip:</strong> If you came from search results, your pickup and drop-off details are already saved. 
                                Click "Book This Car" above to continue with those details.
                            </div>
                        </div>
                    </div>
                    
                    <div class="booking-methods">
                        <div class="row g-4">
                            <!-- Quick Booking (using session data) -->
                            <div class="col-md-6">
                                <div class="booking-option h-100">
                                    <div class="card h-100 border-primary">
                                        <div class="card-body text-center d-flex flex-column">
                                            <i class="bi bi-zap text-primary mb-3" style="font-size: 3rem;"></i>
                                            <h5 class="card-title text-primary">Quick Booking</h5>
                                            <p class="card-text text-muted mb-4">Use your previous search parameters</p>
                                            <div class="mt-auto">
                                                @if (User.Identity.IsAuthenticated)
                                                {
                                                    <a asp-controller="Bookings" asp-action="Book" asp-route-carId="@Model.CarId" 
                                                       class="btn btn-primary btn-lg w-100">
                                                        <i class="bi bi-calendar-plus me-2"></i>
                                                        Continue with Search Data
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-primary btn-lg w-100" onclick="showLoginModal()">
                                                        <i class="bi bi-lock me-2"></i>
                                                        Login to Book
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Custom Booking -->
                            <div class="col-md-6">
                                <div class="booking-option h-100">
                                    <div class="card h-100 border-secondary">
                                        <div class="card-body text-center d-flex flex-column">
                                            <i class="bi bi-gear text-secondary mb-3" style="font-size: 3rem;"></i>
                                            <h5 class="card-title text-secondary">Custom Booking</h5>
                                            <p class="card-text text-muted mb-4">Set new dates and locations</p>
                                            <div class="mt-auto">
                                                <button type="button" class="btn btn-outline-secondary btn-lg w-100" 
                                                        onclick="toggleCustomForm()">
                                                    <i class="bi bi-sliders me-2"></i>
                                                    Customize Details
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Custom Form (Hidden by default) -->
                    <div id="custom-booking-form" class="mt-4 d-none">
                        <hr class="my-4">
                        <h5 class="mb-3">Custom Booking Details</h5>
                        <form method="get" asp-controller="Bookings" asp-action="Book">
                            <input type="hidden" name="carId" value="@Model.CarId" />
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Pickup Date & Time</label>
                                    <input type="datetime-local" name="pickupDate" class="form-control" id="pickup-date" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Return Date & Time</label>
                                    <input type="datetime-local" name="returnDate" class="form-control" id="return-date" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Pickup Location</label>
                                    <input type="text" name="pickupLocation" class="form-control" 
                                           value="@Model.Location" placeholder="Enter pickup location" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Drop-off Location</label>
                                    <input type="text" name="dropLocation" class="form-control" 
                                           value="@Model.Location" placeholder="Enter drop-off location" required />
                                </div>
                                <div class="col-12">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <button type="submit" class="btn btn-success btn-lg w-100">
                                            <i class="bi bi-check-circle me-2"></i>
                                            Proceed to Booking Summary
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-success btn-lg w-100" onclick="showLoginModal()">
                                            <i class="bi bi-lock me-2"></i>
                                            Login to Continue
                                        </button>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showLoginModal() {
            var authModal = new bootstrap.Modal(document.getElementById('authModal'));
            authModal.show();
        }
        
        function toggleCustomForm() {
            const customForm = document.getElementById('custom-booking-form');
            const isHidden = customForm.classList.contains('d-none');
            
            if (isHidden) {
                customForm.classList.remove('d-none');
                // Scroll to the form
                customForm.scrollIntoView({ behavior: 'smooth', block: 'start' });
            } else {
                customForm.classList.add('d-none');
            }
        }
        
        // Set minimum date to today and initialize availability dates
        document.addEventListener('DOMContentLoaded', function() {
            const now = new Date();
            const today = now.toISOString().slice(0, 16);
            
            const pickupInput = document.getElementById('pickup-date');
            const returnInput = document.getElementById('return-date');
            
            if (pickupInput && returnInput) {
                pickupInput.min = today;
                returnInput.min = today;
                
                // Set availability constraints if available
                const availableFrom = new Date('@Model.AvailableFrom.ToString("yyyy-MM-ddTHH:mm")');
                const availableTo = new Date('@Model.AvailableTo.ToString("yyyy-MM-ddTHH:mm")');
                
                if (availableFrom > now) {
                    pickupInput.min = availableFrom.toISOString().slice(0, 16);
                }
                
                pickupInput.max = availableTo.toISOString().slice(0, 16);
                returnInput.max = availableTo.toISOString().slice(0, 16);
                
                // Update return date minimum when pickup date changes
                pickupInput.addEventListener('change', function() {
                    const pickupDate = new Date(this.value);
                    pickupDate.setHours(pickupDate.getHours() + 1); // Minimum 1 hour rental
                    returnInput.min = pickupDate.toISOString().slice(0, 16);
                    
                    // Clear return date if it's before new pickup date
                    if (returnInput.value && new Date(returnInput.value) <= new Date(this.value)) {
                        returnInput.value = '';
                    }
                });
            }
        });
    </script>
}
